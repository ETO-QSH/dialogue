<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 基础按钮样式 -->
    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">96dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="fontFamily">@font/lolita</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 确认按钮 -->
    <style name="DialogButton.Positive" parent="DialogButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- 取消按钮 -->
    <style name="DialogButton.Negative" parent="DialogButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- 对话框主题 -->
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 卡片样式 -->
    <style name="CardDayStyle" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">12dp</item>
    </style>

    <style name="CardEventStyle" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">8dp</item>
    </style>
</resources>